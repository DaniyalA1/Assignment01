<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".SearchActivity">

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-50dp"
        android:alpha="0.7"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="-70dp"
        android:alpha="0.7"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:onClick="onBackButtonClicked"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:text="@string/let"
        android:textColor="#157177"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="75dp"
        android:text="'"
        android:textColor="#157177"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:text="@string/find"
        android:textColor="#157177"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/searchBar"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border_color"
        android:hint="   Search"
        android:paddingStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-32.5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/search"
        app:layout_constraintStart_toStartOf="@id/searchBar"
        app:layout_constraintTop_toBottomOf="@id/searchBar" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:text="@string/recent"
        android:textColor="#157177"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="245dp"
        android:text="@string/m1"
        android:textSize="15.5dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/crossButton1"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="250dp"
        android:background="@android:color/transparent"
        android:src="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="280dp"
        android:text="@string/m2"
        android:textSize="15.5dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/crossButton2"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="285dp"
        android:background="@android:color/transparent"
        android:src="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="315dp"
        android:text="@string/m3"
        android:textSize="15.5dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/crossButton3"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="320dp"
        android:background="@android:color/transparent"
        android:src="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="380dp"
        android:background="#B6ECE7"
        app:layout_constraintHeight_percent="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
            android:text="@string/browse"
            android:textColor="#157177"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/bulbpic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="90dp"
            android:text="@string/ent"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/arrowButton1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="99dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_outward"
            app:layout_constraintStart_toEndOf="@id/t1"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/stair"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="150dp"
            android:text="@string/personal"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/arrowButton2"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="158dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_outward"
            app:layout_constraintStart_toEndOf="@id/t1"
            app:layout_constraintTop_toTopOf="parent" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/edu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="210dp"
            android:text="@string/edu"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/arrowButton3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="220dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_outward"
            app:layout_constraintStart_toEndOf="@id/t1"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/lowerbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-50dp"
            android:background="#157177"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="-80dp"
            android:background="@drawable/blue_circle"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="172.5dp"
            android:layout_marginTop="-72.5dp"
            android:background="@drawable/white_circle"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/plusbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="-80dp"
            android:background="@android:color/transparent"
            android:onClick="onBackButtonClicked"
            android:src="@drawable/outline_add_24"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/homebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-62dp"
            android:background="@android:color/transparent"
            android:onClick="onHomeButtonClicked"
            android:src="@drawable/home"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-15dp"
            android:text="Home"
            android:textColor="#448E8C"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/homebutton"
            app:layout_constraintTop_toBottomOf="@id/homebutton" />

        <ImageButton
            android:id="@+id/searchbutton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="-52dp"
            android:background="@android:color/transparent"
            android:src="@drawable/search"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="parent"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-5dp"
            android:text="Search"
            android:textColor="#B6DDDE"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/searchbutton"
            app:layout_constraintTop_toBottomOf="@id/searchbutton" />

        <ImageButton
            android:id="@+id/chatbutton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="252dp"
            android:layout_marginTop="-51dp"
            android:background="@android:color/transparent"
            android:onClick="onChatButtonClicked"
            android:src="@drawable/chat"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-5dp"
            android:text="Chat"
            android:textColor="#448E8C"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/chatbutton"
            app:layout_constraintTop_toBottomOf="@id/chatbutton" />

        <ImageButton
            android:id="@+id/personbutton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="324dp"
            android:layout_marginTop="-51dp"
            android:background="@android:color/transparent"
            android:onClick="onProfileButtonClicked"
            android:src="@drawable/person"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-5dp"
            android:text="Profile"
            android:textColor="#448E8C"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/personbutton"
            app:layout_constraintTop_toBottomOf="@id/personbutton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>