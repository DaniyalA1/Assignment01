<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".AddMentorActivity">

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-50dp"
        android:alpha="0.7"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="-50dp"
        android:alpha="0.7"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:onClick="onBackButtonClicked"
        android:src="@drawable/baseline_arrow_back_24"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="348dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:text="@string/add"
        android:textColor="#157177"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="30dp"
        android:text="Help us expand!"
        android:textSize="18dp"
        android:textColor="#2C8086"
        app:layout_constraintTop_toBottomOf="@id/text"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="164dp"
        android:layout_weight="8"
        android:background="@drawable/rounder_topborders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/box1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dotted_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/cam1"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="65dp"
            android:background="@drawable/baseline_videocam_24"
            app:layout_constraintTop_toTopOf="@id/box2"
            app:layout_constraintStart_toStartOf="@id/name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/camtext1"
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="48dp"
            android:text="@string/video"
            android:textColor="#157177"
            app:layout_constraintTop_toTopOf="@id/box2"
            app:layout_constraintStart_toStartOf="@id/name"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/box2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/dotted_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/cam2"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="228dp"
            android:background="@drawable/outline_camera"
            app:layout_constraintTop_toTopOf="@id/box2"
            app:layout_constraintStart_toStartOf="@id/name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/camtext2"
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="210dp"
            android:text="@string/upload"
            android:textColor="#157177"
            app:layout_constraintTop_toTopOf="@id/box2"
            app:layout_constraintStart_toStartOf="@id/name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginBottom="3dp"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintStart_toStartOf="@id/name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginBottom="3dp"
            android:text="Description"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@id/des"
            app:layout_constraintStart_toStartOf="@id/des"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_edittext"
            android:hint="  Enter Name"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/des"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_edittext"
            android:hint="  Enter Description"
            android:imeOptions="actionDone"
            android:inputType="textShortMessage"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginBottom="3dp"
            android:text="Status"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/status"
            app:layout_constraintStart_toStartOf="@id/status"
            />

        <EditText
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="336dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_edittext"
            android:hint="  Available"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/down1Button"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            app:layout_constraintEnd_toEndOf="@id/status"
            app:layout_constraintTop_toTopOf="@id/status"
            app:layout_constraintBottom_toBottomOf="@id/status"
            android:layout_marginEnd="8dp"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadbutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_blue_button"
            android:text="Upload"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status"
            app:layout_constraintVertical_bias="0.254" />

        <View
            android:id="@+id/lowerbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#157177"
            app:layout_constraintTop_toBottomOf="@id/uploadbutton"
            android:layout_marginTop="50dp"
            />
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blue_circle"
            app:layout_constraintTop_toBottomOf="@id/uploadbutton"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="165dp"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            />

        <View
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/white_circle"
            app:layout_constraintTop_toBottomOf="@id/uploadbutton"
            android:layout_marginTop="32.5dp"
            android:layout_marginLeft="172.5dp"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            />

        <ImageButton
            android:id="@+id/plusbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="165dp"
            android:background="@android:color/transparent"
            android:onClick="onBackButtonClicked"
            android:src="@drawable/outline_add_24"
            app:layout_constraintTop_toBottomOf="@id/uploadbutton"
            app:layout_constraintStart_toStartOf="@id/lowerbar"/>

        <ImageButton
            android:id="@+id/homebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:onClick="onHomeButtonClicked"
            android:src="@drawable/home"
            app:layout_constraintTop_toBottomOf="@id/uploadbutton"
            app:layout_constraintStart_toStartOf="@id/lowerbar"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-15dp"
            android:text="Home"
            android:textColor="#448E8C"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/homebutton"
            app:layout_constraintTop_toBottomOf="@id/homebutton" />

        <ImageButton
            android:id="@+id/searchbutton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="52dp"
            android:background="@android:color/transparent"
            android:onClick="onSearchButtonClicked"
            android:src="@drawable/search"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="@id/uploadbutton" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-5dp"
            android:text="Search"
            android:textColor="#448E8C"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/searchbutton"
            app:layout_constraintTop_toBottomOf="@id/searchbutton" />

        <ImageButton
            android:id="@+id/chatbutton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="252dp"
            android:layout_marginTop="51dp"
            android:background="@android:color/transparent"
            android:onClick="onChatButtonClicked"
            android:src="@drawable/chat"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="@id/uploadbutton" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-5dp"
            android:text="Chat"
            android:textColor="#448E8C"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/chatbutton"
            app:layout_constraintTop_toBottomOf="@id/chatbutton" />

        <ImageButton
            android:id="@+id/personbutton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="324dp"
            android:layout_marginTop="51dp"
            android:background="@android:color/transparent"
            android:onClick="onProfileButtonClicked"
            android:src="@drawable/person"
            app:layout_constraintStart_toStartOf="@id/lowerbar"
            app:layout_constraintTop_toBottomOf="@id/uploadbutton" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-5dp"
            android:text="Profile"
            android:textColor="#448E8C"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@id/personbutton"
            app:layout_constraintTop_toBottomOf="@id/personbutton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>