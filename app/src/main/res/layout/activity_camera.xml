<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".CameraActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cameralayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCCCCC"
        android:layout_marginBottom="130dp"
        android:layout_marginTop="80dp">

        <ImageButton
            android:id="@+id/crossButton"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:onClick="onCrossButtonClicked"
            android:src="@drawable/close"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="15dp"
            android:text="@string/hdr"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@id/cameralayout"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/sunButton"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_marginLeft="340dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:onClick="onCrossButtonClicked"
            android:src="@drawable/sun"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/slomo"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:text="@string/slo"
        android:background="@android:color/transparent"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@id/cameralayout"
        app:layout_constraintTop_toBottomOf="@id/cameralayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/video"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="8dp"
        android:text="@string/videos"
        android:background="@android:color/transparent"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@id/cameralayout"
        app:layout_constraintTop_toBottomOf="@id/cameralayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/photo"
        android:layout_width="60dp"
        android:layout_height="14dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:text="@string/photo"
        android:background="@drawable/light_blue_rounded_border"
        android:textSize="11dp"
        android:textColor="#157177"
        app:layout_constraintStart_toStartOf="@id/cameralayout"
        app:layout_constraintTop_toBottomOf="@id/cameralayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/square"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="8dp"
        android:text="@string/sq"
        android:background="@android:color/transparent"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@id/cameralayout"
        app:layout_constraintTop_toBottomOf="@id/cameralayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/portrait"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="8dp"
        android:text="@string/potrait"
        android:background="@android:color/transparent"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@id/cameralayout"
        app:layout_constraintTop_toBottomOf="@id/cameralayout" />


    <View
        android:id="@+id/c3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/blue_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameralayout"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="50dp"
        />

    <View
        android:id="@+id/c1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/blue_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameralayout"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="170dp"
        />

    <View
        android:id="@+id/c2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/white_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameralayout"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="175dp"
        />

    <View
        android:id="@+id/c4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/blue_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameralayout"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="320dp"
        />

    <ImageButton
        android:id="@+id/gallerybutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-5.5dp"
        android:layout_marginLeft="-5.5dp"
        android:background="@android:color/transparent"
        android:onClick="onBackButtonClicked"
        android:src="@drawable/image"
        app:layout_constraintTop_toTopOf="@id/c3"
        app:layout_constraintStart_toStartOf="@id/c3"/>

    <ImageButton
        android:id="@+id/videobutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-5.5dp"
        android:layout_marginLeft="-5.5dp"
        android:background="@android:color/transparent"
        android:onClick="onBackButtonClicked"
        android:src="@drawable/white_videocam"
        app:layout_constraintTop_toTopOf="@id/c4"
        app:layout_constraintStart_toStartOf="@id/c4"/>
</androidx.constraintlayout.widget.ConstraintLayout>