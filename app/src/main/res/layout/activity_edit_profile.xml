<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".EditProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#50C2C9"
        app:layout_constraintHeight_percent="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:onClick="onBackButtonClicked"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="35dp"
            android:text="@string/edit"
            android:textColor="#FFFFFF"
            android:textSize="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/circle"
        android:backgroundTint="#112919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="115dp"
        android:background="@drawable/circle"
        android:src="@drawable/pic12"
        android:backgroundTint="#112919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginBottom="3dp"
        android:text="Name"
        android:textColor="#157177"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintStart_toStartOf="@id/name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginBottom="3dp"
        android:text="Email"
        android:textColor="#157177"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintStart_toStartOf="@id/email"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:hint=" Ali"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:hint=" ali@gmail.com"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="3dp"
        android:text="Contact Number"
        android:textColor="#157177"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/contact"
        app:layout_constraintStart_toStartOf="@id/contact"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:hint=" +92 321 2242022"
        android:imeOptions="actionDone"
        android:inputType="phone|number"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="3dp"
        android:text="Country"
        android:textColor="#157177"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/country"
        app:layout_constraintStart_toStartOf="@id/country"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/country"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:hint=" Pakistan"
        android:imeOptions="actionDone"
        android:inputType="textWebEditText"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact"

        />

    <ImageButton
        android:id="@+id/down1Button"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_keyboard_arrow_down_24"
        app:layout_constraintEnd_toEndOf="@id/country"
        app:layout_constraintTop_toTopOf="@+id/country"
        app:layout_constraintBottom_toBottomOf="@+id/country"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="3dp"
        android:text="City"
        android:textColor="#157177"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/city"
        app:layout_constraintStart_toStartOf="@id/city"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/city"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:hint=" Islamabad"
        android:imeOptions="actionDone"
        android:inputType="textWebEditText"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country" />

    <ImageButton
        android:id="@+id/down2Button"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:onClick="onBackButtonClicked"
        android:src="@drawable/baseline_keyboard_arrow_down_24"
        app:layout_constraintEnd_toEndOf="@id/city"
        app:layout_constraintTop_toTopOf="@+id/city"
        app:layout_constraintBottom_toBottomOf="@+id/city"
        android:layout_marginEnd="8dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_blue_button"
        android:text="Update Profile"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city"
         />

</androidx.constraintlayout.widget.ConstraintLayout>